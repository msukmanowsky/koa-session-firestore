{
  "name": "koa-session-firestore",
  "version": "0.1.0",
  "description": "A Firestore-backed session store for the Koa framework.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "firebase emulators:exec --only firestore \"node_modules/.bin/jest --detectOpenHandles\"",
    "prepare": "npm run test && npm run build",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/msukmanowsky/koa-session-firestore"
  },
  "keywords": [
    "koa",
    "koa-session",
    "session"
  ],
  "author": "Mike Sukmanowsky <mike.sukmanowsky@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@firebase/testing": "^0.16.0",
    "@google-cloud/firestore": "^2.6.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.23",
    "@types/koa-session": "^5.10.1",
    "jest": "^24.9.0",
    "koa-session": "^5.12.3",
    "prettier": "1.19.1",
    "release-it": "^12.4.3",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "@google-cloud/firestore": "2.6.x",
    "koa-session": "5.12.x"
  },
  "release-it": {
    "hooks": {
      "before:init": ["npm run format", "npm test"]
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "access": "public"
    }
  },
  "dependencies": {
    "debug": "^4.1.1"
  }
}
